<Window x:Class="CrackerServerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrackerServerWPF"
        mc:Ignorable="d"
        Title="Password Cracker" Height="450" Width="800">
    <Grid Background="#FF404040">
        <Button x:Name="startButton" Content="Start" HorizontalAlignment="Left" Margin="251,201,0,0" VerticalAlignment="Top" Width="75" Click="StartButtonClick"/>
        <Button x:Name="stopButton" Content="Stop" HorizontalAlignment="Left" Margin="369,201,0,0" VerticalAlignment="Top" Width="75" Click="StopButtonClick"/>
        <Button x:Name="crackButton" Content="Crack" HorizontalAlignment="Left" Margin="306,273,0,0" VerticalAlignment="Top" Width="75" Click="CrackButtonClick"/>
        <ListView x:Name="listView" HorizontalAlignment="Left" Height="276" Margin="522,133,0,0" VerticalAlignment="Top" Width="260" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="Auto" Header="Logs"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label x:Name="methodLabel" Content="Method: " HorizontalAlignment="Left" Margin="31,94,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="bruteForceRadio" Content="Brute Force" HorizontalAlignment="Left" Margin="89,100,0,0" VerticalAlignment="Top" Checked="BruteForceRadioChecked"/>
        <RadioButton x:Name="dictionaryRadio" Content="Dictionary" HorizontalAlignment="Left" Margin="179,100,0,0" VerticalAlignment="Top" Checked="DictionaryRadioChecked"/>
        <TextBox x:Name="filePath" HorizontalAlignment="Left" Height="23" Margin="261,97,0,0" VerticalAlignment="Top" Width="248"/>
        <Button x:Name="fileButton" Content="Choose file" HorizontalAlignment="Left" Margin="522,100,0,0" VerticalAlignment="Top" Width="75" Click="FileButtonClick"/>
    </Grid>
</Window>
